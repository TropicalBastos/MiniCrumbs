{
    "name": "breadcrumbs/minicrumbs",
    "description": "Portable lightweight breadcrumbs library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "TropicalBastos",
            "email": "ian-bastos@live.com"
        }
    ],
    "require": {
        "php": "^5.3.3 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.7.*"
    },
    "autoload": {
        "classmap": [
            "src/classes/MiniCrumbs.php",
            "src/classes/Crumb.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/MiniCrumbsTest.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
